<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    tools:context="com.mokiware.layoutexamples.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tea_question"
        android:paddingTop="16dp"/>

    <ToggleButton
        android:id="@+id/hot_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Hot"
        android:textOff="Cold"/>

    <CheckBox
        android:id="@+id/milk_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"/>

    <CheckBox
        android:id="@+id/sugar_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugar"/>

    <CheckBox
        android:id="@+id/lemon_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lemon"/>


</LinearLayout>
